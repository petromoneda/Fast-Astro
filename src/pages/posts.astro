---
import Card from "../components/Card.astro"
const response = await fetch ('https://jsonplaceholder.typicode.com/posts')
const posts = await response.json()
const respuesta = await fetch ('https://picsum.photos/v2/list?page=2&limit=100')
const photos = await respuesta.json()
//const thumbs = await photos.slice(0,100)

---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicaciones</title>
</head>
<body>
    <h1>Publicaciones</h1>
{
    photos.map((photo, index) => (
            <Card 
            user={photo.author}      
            url={photo.download_url}
            textoAlt={posts[index].title}
            titulo={posts[index].title}
            contenido={posts[index].body}
            />
            
    ))
    
}
</body>

</html>
